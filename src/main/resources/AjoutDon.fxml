<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="rootAnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AjoutDonController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Ajouter un don" />
        <HBox layoutX="14.0" layoutY="44.0" spacing="10">
            <children>
                <Label text="ID :" />
                <TextField fx:id="idTextField" />
            </children>
        </HBox>
        <HBox layoutX="14.0" layoutY="80.0" spacing="10">
            <children>
                <Label text="Date :" />
                <TextField fx:id="dateTextField" />
            </children>
        </HBox>
        <HBox layoutX="14.0" layoutY="116.0" spacing="10">
            <children>
                <Label text="Montant :" />
                <TextField fx:id="montantTextField" />
            </children>
        </HBox>
        <HBox layoutX="14.0" layoutY="152.0" spacing="10">
            <children>
                <Label text="Projet :" />
                <TextField fx:id="projetTextField" />
            </children>
        </HBox>
        <HBox layoutX="14.0" layoutY="188.0" spacing="10">
            <children>
                <Label text="Type de don :" />
                <TextField fx:id="typeDonTextField" />
            </children>
        </HBox>
        <HBox layoutX="14.0" layoutY="224.0" spacing="10">
            <children>
                <Label text="Donateur :" />
                <TextField fx:id="donateurTextField" />
            </children>
        </HBox>
        <Button layoutX="14.0" layoutY="264.0" mnemonicParsing="false" onAction="#ajouterDon" text="Ajouter" />
    </children>
</AnchorPane>
